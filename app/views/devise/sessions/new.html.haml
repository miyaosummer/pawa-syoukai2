.login
  %h2 ログインしよう！
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .login__email
      = f.label :email,class:"login__email__label"
      -# %br/
      = f.email_field :email,placeholder:"mail", autofocus: true, autocomplete: "email",class:"login__email__form"
    .login__password
      = f.label :password,class:"login__password__label"
      -# %br/
      = f.password_field :password,placeholder:"password", autocomplete: "current-password",class:"login__password__form"
    -# - if devise_mapping.rememberable?
    -#   .field
    -#     = f.check_box :remember_me
    -#     = f.label :remember_me
    .actions
      = f.submit "Log in",class:"actions__submit"
  = render "devise/shared/links"
